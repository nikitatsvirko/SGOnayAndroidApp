<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.application.nikita.sgonayapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:label="@string/app_name"
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/title_activity_tasks"
            android:name=".activities.TasksActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:label="@string/title_activity_games"
            android:name=".activities.GamesActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:label="@string/title_answer"
            android:name=".activities.AnswerActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />
    </application>

</manifest>